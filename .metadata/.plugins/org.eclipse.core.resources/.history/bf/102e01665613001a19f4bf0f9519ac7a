
public class JoueurReel extends Joueur {
	
	public JoueurReel(String nom, Partie partie){
		super();
		this.setPseudo(nom);
		partie.addJoueur(this);
	}
	public static void main(String[] args) {
		Partie partie;
		partie = Partie.getInstance();
		Tas t = new Tas();
		t.getTas().add(new Carte(Valeur.AS, Couleur.COEUR));
		t.getTas().add(new Carte(Valeur.AS, Couleur.CARREAU));
		t.getTas().add(new Carte(Valeur.DEUX, Couleur.PIC));
		t.getTas().add(new Carte(Valeur.QUATRE, Couleur.PIC));
		t.getTas().add(new Carte(Valeur.TROIS, Couleur.PIC));
		JoueurReel a = new JoueurReel("xavier",partie);
		JoueurReel b = new JoueurReel("patrick",partie);
		b.piocherDansTas(t);
		b.piocherDansTas(t);
		b.faireOffre(false);
		// main.getOffre().put("carte droite",new Carte(Valeur.TROIS, Couleur.COEUR));
		a.piocherDansTas(t);
		a.piocherDansTas(t);
		a.faireOffre(true);
		a.consulterMain();
		b.consulterOffre(a);
		b.piocherOffre(a, true);
		a.consulterMain();
		b.getJest().afficherJest();
	}
}

