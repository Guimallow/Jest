import java.util.*;

public class Partie {
	private static Partie partie = null;
	private ArrayList<Joueur> joueurs;
	private int nbJoueur;
	private int nbIa;

	private Partie() {
		this.joueurs = new ArrayList<Joueur>();
		this.nbJoueur = 0;
		this.nbIa = 0;

	}

	public static Partie getInstance() {
		if (partie == null) {
			partie = new Partie();
		}
		return partie;
	}

	public void addJoueur(Joueur joueur) {
		this.joueurs.add(joueur);
	}

	public ArrayList<Joueur> getJoueurs() {
		return this.joueurs;
	}

	public void configurerNbJoueur() {
		System.out.println("\n Combien de joueurs souhaitez vous (entre 3 et 4)?\n ");
		Scanner sc = new Scanner(System.in);
		String choix = "0";
		boolean valide = false;
		while (valide == false) {

			choix = sc.nextLine();

			switch (choix) {
			case "3":
				nbJoueur = 3;
				valide = true;
				break;
			case "4":
				nbJoueur = 4;
				valide = true;

				break;
			default:
				System.out.println("Vous avez tapé un mauvais nombre, veuillez recommencer");

			}
		}
		
		sc.close();
	}

	public void configurerPartie() {
		System.out.println("------Jeu De Jest------ \n");
		System.out.println("Que souhaitez vous faire? \n 1. Lancer une partie \n 2. Gérer les paramètres \n");
		Scanner sc = new Scanner(System.in);
		String choix1 = "0";
		boolean valide = false;
		while (valide == false) {

			choix1 = sc.nextLine();

			switch (choix1) {
			case "1":
				valide = true;
				break;
			case "2":
				valide = true;

				break;
			default:
				System.out.println("Vous avez tapé un mauvais nombre, veuillez recommencer");

			}
		}
		System.out.println("Etape réussie");
		sc.close();

	}

	public static void main(String[] args) {
		Partie.getInstance();
		Partie.partie.configurerNbJoueur();

	}

}
