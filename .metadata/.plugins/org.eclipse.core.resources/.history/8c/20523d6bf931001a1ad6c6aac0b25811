package modele;
import java.util.*;

/**
 * Classe représentant l'offre d'un joueur
 */
public class Offre {
	/**
	 * attribut privé de type ArrayList qui correspond aux deux cartes de l'offre
	 */
	private ArrayList<Carte> offre;
	/**
	 * attribut privé de type booléen qui définit si l'on peut piocher ou non dans l'offre
	 */
	private boolean estPiochable;
	
	/**
	 * constructeur de la classe Offre qui crée la liste de carte (avec 0 carte tant que le joueur n'a pas pioché)
	 * et qui initialise sa piochabilité à vrai
	 */
	public Offre() {
		this.estPiochable = true;
		this.offre = new ArrayList<Carte>();
	}
	
	/**
	 * getter qui renvoie l'offre du joueur
	 * @return l'offre
	 */
	public ArrayList<Carte> getOffre() {
		return offre;
	}
	
	/**
	 * méthode qui affiche aux autres joueurs l'offre du joueur courant
	 * si la carte n'est pas visible, n'affiche pas la carte mais un message alternatif
	 */
	public void afficherOffre() {
		for(Carte c:offre) {
			if(c.getVisibilite()==true) {
				System.out.println(c);				
			}else {System.out.println("Carte face cachée");}
		}
		
	}
	
	/**
	 * getter qui renvoie si l'offre est piochable ou non
	 * @return le booléen correspondant à la piochabilité de l'offre
	 */
	public boolean getPiochabilite() {
		return this.estPiochable;
	}
	
	/**
	 * setter qui modifie le booléen de piochabilité de l'offre
	 * @param b la valeur du booléen qui modifie la piochabilité de l'offre
	 */
	public void setPiochabilite(boolean b) {
		this.estPiochable=b;
	}

	

}
